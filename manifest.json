{
  "manifest_version": 3,
  "name": "Discord Emoji Sidebar",
  "description": "Injects a custom emoji sidebar on Discord.",
  "version": "1.0",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["scripting"],
  "host_permissions": ["https://discord.com/*"],
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["icon128.png"],
    "matches": ["<all_urls>"]
  }]
}
